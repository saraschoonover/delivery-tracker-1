<div>
  <div>
    <h1>
      Delivery Tracker
    </h1>
    <p>Know if something gets lost in the mail</p>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Expecting a package?
    </h2>

    <form action="/insert_package" method="post">
      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="supposed_to_arrive_on_box">
          Supposed to arrive on
        </label>

        <input type="date" id="supposed_to_arrive_on_box" name="query_supposed_to_arrive_on">
      </div>

      <div>
        <label for="details_box">
          Details
        </label>

        <textarea id="details_box" name="query_details" rows="3"></textarea>
      </div>

      <button>
        Log delivery
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div class="waiting_on">
    <h2>Waiting on</h2>

      <% @list_of_packages.each do |a_package| %>
        <% if a_package.arrived == false %>
        <ul>
          <li> <%= a_package.description %></li>
          <p> Supposed to arrive on <%= a_package.supposed_to_arrive_on %></p>
          <p><%= a_package.details %></p>  
        </ul>
            <div>
          <form action="/modify_package/<%= a_package.id %>" method="post">
            <input type="hidden" name="arrived" value="true">
            <button>Mark as received</button>
          </form>
        </div>
        <% end %>
      <% end %>
  </div>
  <hr>
  <div class="received">
    <h2>Received</h2>
      <ul>
        <% @list_of_packages.each do |a_package| %>
          <% if a_package.arrived %>
            <li>
              <div><%= a_package.description %></div>
              <div>
                <small>
                  <p>Updated <%= time_ago_in_words(a_package.created_at) %> </p>
                  <a href="/delete_package/<%= a_package.id %>">Delete</a>
                </small>
              </div>
            </li>
          <% end %>
        <% end %>
      </ul>
  </div>
</div>
